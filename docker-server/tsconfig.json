{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
    "types" : ["node", "express"],
    "typeRoots": ["@types", "node_modules/@types"],
    "paths": {
      "@root/*": ["./src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
